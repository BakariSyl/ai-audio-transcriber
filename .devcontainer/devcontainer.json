{
  "name": "Dev Container",
  "build": {
    "dockerfile": ".devcontainer/Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-python.python"
  ],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y docker.io",
  "remoteUser": "vscode",
  "features": {
    "docker-in-docker": "latest"
  }
}